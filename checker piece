import java.awt.*;

//pieces red and black 
/* suppose to create an array of 2d to place pieces in rows and columns
 * 
 */

public class Piece extends checkerBoard {
	//rows columns and color
	private int rows;
	private int columns;
	public Color color;
	
	public Piece(Color cl, int rows, int columns) {

		color = cl;
		this.rows = rows;
		this.columns = columns;
		
	}
	
	public int getRows() {
		return rows;
	}
	
	public Color getColor() {
		return color;
	}

	public int getColumn() {
		return columns;
	}

	public void setLoc(int rows, int columns) {
		this.rows = rows;
		this.columns = columns;
	}


	public String toString() {
		
		StringBuilder s = new StringBuilder();
		
		if(this.color == Color.BLACK)
			s.append("Black ");
		
		else
			s.append("Red ");
		
		s.append("piece at rows " + Integer.toString(this.getRows()) + 
				 ", columns " + Integer.toString(this.getColumn()));
		
		return s.toString();
	}
}
